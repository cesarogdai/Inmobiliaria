<html lang="es">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta
      name="description"
      content="TORRE MÉDICA Consultorios en pre-venta en AP Medical Center. Torre médica con locales y consultorios en la Ciudad de Tuxtla Gutiérrez. Torre AP Center cuenta con una propuesta de funcionalidad mixt..."
    />
    <meta name="keywords" content="" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"
    />
    <title>{{property.title}}</title>
    <style>
      .col-lg-4 { position: relative; } .mySlides { display: none; width: 100%;
      } .w3-button { position: absolute; top: 50%; transform: translateY(-50%);
      font-size: 20px; cursor: pointer; color: white; background-color: rgba(0,
      0, 0, 0.3); /* Slightly transparent black */ border: none; padding: 10px;
      transition: background-color 0.3s ease; } .w3-button:hover {
      background-color: white; /* White on hover */ color: black; }
      .w3-display-left { left: 0; } .w3-display-right { right: 0; }
    </style>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    {{> navbar}}
  </head>
 
  <body id="property" class="big-head">
    <div id="hero" class="section">
      <div class="user-image">
        <div class="user-content">

        </div>
      </div>
    </div>
    <div class="container">
      <div class="name row">
        <h1 class="title">{{printProp property "titulo"}}</h1>
        <div class="col-lg-4">
          {{#each images}}
            <img class="mySlides" src="{{this}}" style="width:100%" />
          {{/each}}

          <button
            class="w3-button w3-black w3-display-left"
            onclick="plusDivs(-1)"
          >&#10094;</button>
          <button
            class="w3-button w3-black w3-display-right"
            onclick="plusDivs(1)"
          >&#10095;</button>
        </div>
        <div class="col-sm-4"></div>
        <input type="text" value="{{stringify property}}" />
      </div>
    </div>

  </body>
  <script>
    var slideIndex = 1; showDivs(slideIndex); function plusDivs(n) {
    showDivs(slideIndex += n); } function showDivs(n) { var i; var x =
    document.getElementsByClassName("mySlides"); if (n > x.length) {slideIndex =
    1} if (n < 1) {slideIndex = x.length} for (i = 0; i < x.length; i++) {
    x[i].style.display = "none"; } x[slideIndex-1].style.display = "block"; }
  </script>
</html>